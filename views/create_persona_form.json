{
  "type": "modal",
  "callback_id": "create_persona",
  "title": {
    "type": "plain_text",
    "text": "ðŸŽ­ Create New Persona"
  },
  "submit": {
    "type": "plain_text",
    "text": "Create Persona"
  },
  "close": {
    "type": "plain_text",
    "text": "Cancel"
  },
  "blocks": [
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "*Create a new AI persona* with custom personality, expertise, and response style."
      }
    },
    {
      "type": "divider"
    },
    {
      "type": "input",
      "block_id": "persona_name",
      "element": {
        "type": "plain_text_input",
        "placeholder": {
          "type": "plain_text",
          "text": "e.g. Technical Writer, Data Analyst, Creative Helper"
        },
        "action_id": "name_input"
      },
      "label": {
        "type": "plain_text",
        "text": "Persona Name"
      }
    },
    {
      "type": "input",
      "block_id": "persona_description",
      "element": {
        "type": "plain_text_input",
        "multiline": true,
        "placeholder": {
          "type": "plain_text",
          "text": "Brief description of this persona's purpose and expertise"
        },
        "action_id": "description_input"
      },
      "label": {
        "type": "plain_text",
        "text": "Description (Optional)"
      },
      "optional": true
    },
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "*AI Configuration*"
      }
    },
    {
      "type": "input",
      "block_id": "ai_model",
      "element": {
        "type": "static_select",
        "placeholder": {
          "type": "plain_text",
          "text": "Choose AI model"
        },
        "action_id": "model_select",
        "options": [
          {
            "text": {
              "type": "plain_text",
              "text": "Claude Sonnet - Fast & balanced"
            },
            "value": "sonnet"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Claude Opus - Most capable"
            },
            "value": "opus"
          }
        ]
      },
      "label": {
        "type": "plain_text",
        "text": "AI Model"
      }
    },
    {
      "type": "input",
      "block_id": "temperature",
      "element": {
        "type": "static_select",
        "placeholder": {
          "type": "plain_text",
          "text": "Choose creativity level"
        },
        "action_id": "temperature_select",
        "options": [
          {
            "text": {
              "type": "plain_text",
              "text": "0.1 - Very consistent & factual"
            },
            "value": "0.1"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "0.3 - Mostly consistent"
            },
            "value": "0.3"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "0.7 - Balanced creativity"
            },
            "value": "0.7"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "1.0 - Very creative & varied"
            },
            "value": "1.0"
          }
        ]
      },
      "label": {
        "type": "plain_text",
        "text": "Temperature (Creativity Level)"
      }
    },
    {
      "type": "divider"
    },
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "*System Prompt*"
      }
    },
    {
      "type": "input",
      "block_id": "system_prompt_selector",
      "element": {
        "type": "static_select",
        "placeholder": {
          "type": "plain_text",
          "text": "Start with existing prompt or create new"
        },
        "action_id": "prompt_select",
        "options": [
          {
            "text": {
              "type": "plain_text",
              "text": "âœ¨ Create new custom prompt"
            },
            "value": "new_prompt"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Assistant - General help & balanced responses"
            },
            "value": "1"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Creative Writer - Expressive & imaginative"
            },
            "value": "2"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Technical Analyst - Logical & precise"
            },
            "value": "3"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Code Helper - Programming assistance"
            },
            "value": "4"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Writing Coach - Style & clarity guidance"
            },
            "value": "5"
          }
        ]
      },
      "label": {
        "type": "plain_text",
        "text": "Choose Base Prompt"
      }
    },
    {
      "type": "input",
      "block_id": "system_prompt_content",
      "element": {
        "type": "plain_text_input",
        "multiline": true,
        "placeholder": {
          "type": "plain_text",
          "text": "You are a helpful AI assistant. Define the persona's expertise, personality, and response style here..."
        },
        "action_id": "prompt_input",
        "max_length": 3000
      },
      "label": {
        "type": "plain_text",
        "text": "System Prompt Content"
      }
    },
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "ðŸ’¾ *Save this prompt for reuse?*"
      },
      "accessory": {
        "type": "checkboxes",
        "action_id": "save_prompt_checkbox",
        "options": [
          {
            "text": {
              "type": "plain_text",
              "text": "Save as new system prompt"
            },
            "value": "save_prompt"
          }
        ]
      }
    },
    {
      "type": "input",
      "block_id": "new_prompt_title",
      "element": {
        "type": "plain_text_input",
        "placeholder": {
          "type": "plain_text",
          "text": "e.g. Python Expert, Marketing Copywriter, Research Assistant"
        },
        "action_id": "prompt_title_input"
      },
      "label": {
        "type": "plain_text",
        "text": "Prompt Title (if saving)"
      },
      "optional": true
    },
    {
      "type": "context",
      "elements": [
        {
          "type": "mrkdwn",
          "text": "ðŸ’¡ *Tip:* Select an existing prompt to start with, then modify the content. Check 'Save as new system prompt' to create a reusable template for future personas."
        }
      ]
    }
  ]
} 