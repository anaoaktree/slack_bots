{
  "type": "modal",
  "callback_id": "edit_persona",
  "title": {
    "type": "plain_text",
    "text": "‚úèÔ∏è Edit Persona"
  },
  "submit": {
    "type": "plain_text",
    "text": "Save Changes"
  },
  "close": {
    "type": "plain_text",
    "text": "Cancel"
  },
  "private_metadata": "",
  "blocks": [
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "*Edit your AI persona* settings, personality, and response style."
      }
    },
    {
      "type": "divider"
    },
    {
      "type": "input",
      "block_id": "persona_name",
      "element": {
        "type": "plain_text_input",
        "placeholder": {
          "type": "plain_text",
          "text": "e.g. Technical Writer, Data Analyst, Creative Helper"
        },
        "action_id": "name_input",
        "initial_value": ""
      },
      "label": {
        "type": "plain_text",
        "text": "Persona Name"
      }
    },
    {
      "type": "input",
      "block_id": "persona_description",
      "element": {
        "type": "plain_text_input",
        "multiline": true,
        "placeholder": {
          "type": "plain_text",
          "text": "Brief description of this persona's purpose and expertise"
        },
        "action_id": "description_input",
        "initial_value": ""
      },
      "label": {
        "type": "plain_text",
        "text": "Description (Optional)"
      },
      "optional": true
    },
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "*AI Configuration*"
      }
    },
    {
      "type": "input",
      "block_id": "ai_model",
      "element": {
        "type": "static_select",
        "placeholder": {
          "type": "plain_text",
          "text": "Choose AI model"
        },
        "action_id": "model_select",
        "options": [
          {
            "text": {
              "type": "plain_text",
              "text": "Claude Sonnet - Fast & balanced"
            },
            "value": "sonnet"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Claude Opus - Most capable"
            },
            "value": "opus"
          }
        ]
      },
      "label": {
        "type": "plain_text",
        "text": "AI Model"
      }
    },
    {
      "type": "input",
      "block_id": "temperature",
      "element": {
        "type": "static_select",
        "placeholder": {
          "type": "plain_text",
          "text": "Choose creativity level"
        },
        "action_id": "temperature_select",
        "options": [
          {
            "text": {
              "type": "plain_text",
              "text": "0.1 - Very consistent & factual"
            },
            "value": "0.1"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "0.3 - Mostly consistent"
            },
            "value": "0.3"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "0.7 - Balanced creativity"
            },
            "value": "0.7"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "1.0 - Very creative & varied"
            },
            "value": "1.0"
          }
        ]
      },
      "label": {
        "type": "plain_text",
        "text": "Temperature (Creativity Level)"
      }
    },
    {
      "type": "divider"
    },
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "*System Prompt*"
      }
    },
    {
      "type": "input",
      "block_id": "system_prompt_selector",
      "element": {
        "type": "static_select",
        "placeholder": {
          "type": "plain_text",
          "text": "Start with existing prompt or create new"
        },
        "action_id": "prompt_select",
        "options": [
          {
            "text": {
              "type": "plain_text",
              "text": "‚ú® Create new custom prompt"
            },
            "value": "new_prompt"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Assistant - General help & balanced responses"
            },
            "value": "1"
          }
        ]
      },
      "label": {
        "type": "plain_text",
        "text": "Base System Prompt (Optional)"
      },
      "optional": true
    },
    {
      "type": "input",
      "block_id": "system_prompt_content",
      "element": {
        "type": "plain_text_input",
        "multiline": true,
        "max_length": 3000,
        "placeholder": {
          "type": "plain_text",
          "text": "Enter the system prompt that defines this persona's behavior, expertise, and response style..."
        },
        "action_id": "prompt_input",
        "initial_value": ""
      },
      "label": {
        "type": "plain_text",
        "text": "System Prompt Content"
      }
    },
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "*üíæ Save Prompt Options*"
      }
    },
    {
      "type": "input",
      "block_id": "save_prompt_options",
      "element": {
        "type": "checkboxes",
        "action_id": "save_prompt_checkbox",
        "options": [
          {
            "text": {
              "type": "mrkdwn",
              "text": "Save this prompt for reuse in other personas"
            },
            "value": "save_prompt"
          }
        ]
      },
      "label": {
        "type": "plain_text",
        "text": "Prompt Management"
      },
      "optional": true
    },
    {
      "type": "input",
      "block_id": "new_prompt_title",
      "element": {
        "type": "plain_text_input",
        "placeholder": {
          "type": "plain_text",
          "text": "e.g. 'Data Analysis Expert', 'Creative Writing Coach'"
        },
        "action_id": "prompt_title_input",
        "initial_value": ""
      },
      "label": {
        "type": "plain_text",
        "text": "New Prompt Title (if saving as reusable)"
      },
      "optional": true
    }
  ]
} 